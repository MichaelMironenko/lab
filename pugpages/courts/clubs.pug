doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Корты
        link(href="../../styles.css" rel="stylesheet")
        base(href="../../")
    body.bg-page-background.pt-16.pb-32(class="px-2 xs:px-3 sm:px-4 ")
        +topBar
        .flex.justify-between.items-center.pb-2
            h1 Клубы
            a.text-sm + Добавить клуб
        +searchAndFilterButton('Название клуба, станция метро', true)
        .flex.flex-wrap.gap-2.py-3
            +tag('lab-red', 'white', 'Нижний Новгород')
        div.relative
            img(src="dynamic-img/map.png", alt="" class="-mx-[3vw] max-w-[100vw] aspect-[2/1] object-cover ")
            .absolute.top-2.right-0.border.border-lab-color.bg-white.text-lab-color.text-sm.font-semibold.py-1.px-2.rounded-lg.shadow-md Открыть карту
            +sortButton('По популярности', [{text: 'По рейтингу'}, {text: 'По новизне'}, {text: 'Сначала дешевые'}, {text: 'Сначала дорогие'}, {text: 'По удаленности'}], ' py-2 ')
        div.grid.grid-cols-1(class="sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4").gap-2
            +horizontalClubCard({photo: 'dynamic-img/club-placeholder.svg', logo: '', name: 'Naten-СЕВЕР', stars: '4.2', reviews: '8', metro: 'Северная', metroColor: 'lab-black-30', distance: '2,5', courts: '4', services: ['wifi', 'parking']}, [{time: '13:00', price: '550', lastCourt: false}, {time: '14:00', price: '550', lastCourt: false}])
            +horizontalClubCard({photo: 'dynamic-img/club-1.jpg', logo: 'dynamic-img/naten-logo.png', name: 'Naten-ЮГ', stars: '4.4', reviews: '12', metro: 'Юго-Западная', metroColor: 'lab-red', distance: '1,8', courts: '6', services: ['wifi', 'shower', 'parking']})
            +horizontalClubCard({photo: 'dynamic-img/club-placeholder.svg', logo: 'dynamic-img/club-placeholder.svg', name: 'Naten-ВОСТОК', stars: '4.6', reviews: '20', metro: 'Восточная',  metroColor: 'lab-yellow', distance: '1,2', courts: '8', services: ['wifi', 'shower', 'parking', 'ac']}, [{time: '15:00', price: '600', lastCourt: false}, {time: '16:00', price: '600', lastCourt: true}])

        +tabBar('Корты')