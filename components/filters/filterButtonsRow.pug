include filterButton.pug

mixin filterButtonsRow(buttons, padding, extraClass, fontSize, scroll)
  div(class=`flex overflow-x-auto space-x-2 no-scrollbar scroll-smooth  ${extraClass}` + (padding ? ' px-4' : '') )
    each button in buttons
      +filterButton(button.label, button.active, button.number, button.deleteButton, fontSize)

  if scroll
    script.
        document.addEventListener('DOMContentLoaded', () => {
          document.querySelector('.flex.overflow-x-auto').scrollLeft = document.querySelector('.flex.overflow-x-auto').scrollWidth;
        });
