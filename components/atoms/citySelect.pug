mixin citySelect(image, extraClass, containerClass, flex)
  span(class=`${containerClass} ${flex ? ' flex items-center gap-1' : ''}`)
    if image
      img.h-4.w-4(src='img/location-icon.svg' alt="")
    label(for='city-select')
      select.w-fit.appearance-none.border-none.bg-transparent.bg-none.p-0.font-semibold.leading-none.text-lab-color(
        class=`${extraClass} focus-visible:outline-none`,
        id='city-select'
        aria-label="Выбор города"
      )
        option(value='0', selected) Все города
        option(value='781') Алексин
        option(value='38') Казань
        option(value='120') Калининград
        option(value='197') Калуга
        option(value='35') Кемерово
        option(value='8') Красногорск
        option(value='1') Москва
        option(value='67') Новосибирск
        option(value='312') Одинцово