mixin bookmark(active = false, extraClass)
  button#bookmarkButton.cursor-pointer.shrink-0(onclick="toggleBookmark()" class=`${extraClass}`)
    - var initialSrc = active ? 'img/bookmark-fill.svg' : 'img/bookmark-empty.svg'
    img#bookmarkIcon.w-6.h-6(src=initialSrc alt="Bookmark")

  script.
    var isActive = #{active}; // Начальное состояние закладки
    function toggleBookmark() {
      isActive = !isActive; // Переключаем состояние
      var bookmarkIcon = document.getElementById('bookmarkIcon');
      bookmarkIcon.src = isActive ? 'img/bookmark-fill.svg' : 'img/bookmark-empty.svg';
    }
