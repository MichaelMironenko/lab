mixin actionMenu(items, id)
  div.menu-container(class="fixed hidden inset-0 bg-gray-900 bg-opacity-50 backdrop-blur-sm z-20" id=`${id}` data-action="hide")
    div(class="max-h-90 absolute bottom-0 left-0 w-full z-30 bg-white rounded-t-2xl flex flex-col")
      each item, index in items
        a(class="flex items-center gap-3 px-4 py-3" + (index === items.length - 1 ? '' : ' border-b border-lab-black-10') href=item.link ? item.link : '#' data-action="hide")
          if item.icon
            img(src=item.icon class="h-6 w-6")
          span(class="flex-1"+ (item.icon ? '' : ' text-center ') +  (item.color ? item.color : 'text-lab-color')) #{item.text}
    script.
      document.addEventListener('click', function (e) {
        if (e.target.dataset.action === 'hide') {
          var menuContainer = document.querySelector('.menu-container'); 
          if (menuContainer) {
            menuContainer.style.display = 'none';
          }
        }
      });